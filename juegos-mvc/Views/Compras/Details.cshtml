@model juegos_mvc.Models.Compra

@{
    ViewData["Title"] = "Details";
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Datos de la compra</h5>

                <hr />

                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Juego)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Juego.Titulo)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Cliente)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Cliente.NombreYApellido)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.FechaCompra)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.FechaCompra)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.PrecioOriginal)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.PrecioOriginal)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.PrecioFinal)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.PrecioFinal)
                    </dd>
                </dl>
                <hr />
                <div class="form-group">
                    <a asp-action="Index" class="btn btn-danger">
                        Cancelar
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
