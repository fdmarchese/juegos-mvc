@model juegos_mvc.Models.Compra

@{
    ViewData["Title"] = "Alta de Compra";
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Alta de Compra</h5>
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="JuegoId" class="control-label"></label>
                        <select asp-for="JuegoId" class="form-control" asp-items="ViewBag.JuegoId"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="ClienteId" class="control-label"></label>
                        <select asp-for="ClienteId" class="form-control" asp-items="ViewBag.ClienteId"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="FechaCompra" class="control-label"></label>
                        <input asp-for="FechaCompra" class="form-control" />
                        <span asp-validation-for="FechaCompra" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PrecioOriginal" class="control-label"></label>
                        <input asp-for="PrecioOriginal" class="form-control" />
                        <span asp-validation-for="PrecioOriginal" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PrecioFinal" class="control-label"></label>
                        <input asp-for="PrecioFinal" class="form-control" />
                        <span asp-validation-for="PrecioFinal" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Confirmar" class="btn btn-success" />
                        <a asp-action="Index" class="btn btn-danger">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
